<PROGRAMA> → HOLA <BLOQUE> ADÍOS

<BLOQUE> → <DECLARACION>
<BLOQUE> → <DECLARACION> <BLOQUE>
<BLOQUE> → <ASIGNACION>
<BLOQUE> → <ASIGNACION> <BLOQUE>
<BLOQUE> → <CONDICIONAL>
<BLOQUE> → <CONDICIONAL> <BLOQUE>

<DECLARACION> → entero = <ID> ;
<DECLARACION> → booleano = <ID> ;

<ASIGNACION> → <ID> = <NUM> ;
<ASIGNACION> → <ID> = <ID> + <NUM> ;

<CONDICIONAL> → si ( <CONDICION> ) entonces { <BLOQUE_COND> }

<BLOQUE_COND> → <CICLO>

<CICLO> → mientras ( <CONDICION> ) { <ASIGNACION> }

<CONDICION> → <ID> <OPERADOR_REL> <ID>

<OPERADOR_REL> → <

<ID> → x
<ID> → y

<NUM> → 1
<NUM> → 5
<NUM> → 10
